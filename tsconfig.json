{
  "compilerOptions": {
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "~/*" : ["src/app/*"]
    },
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "types": [
        "jasmine",
        "node",
        "protractor",
        "selenium-webdriver",
        "geojson",
        "mapbox-gl",
        "turf"
     ],
     "noUnusedParameters": true,
     "lib":[
       "es2015",
       "dom"
     ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
        "node_modules",
        "phonegap"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
